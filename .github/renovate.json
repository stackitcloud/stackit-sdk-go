{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":dependencyDashboard"
    ],
    "enabledManagers": [
        "gomod",
        "github-actions"
    ],
    "gomod": {
        "packageRules": [
            {
                "matchUpdateTypes": [
                    "major"
                ],
                "groupName": "go-major"
            },
            {
                "matchUpdateTypes": [
                    "minor",
                    "patch"
                ],
                "groupName": "go-non-major"
            }
        ]
    },
    "postUpdateOptions": [
        "gomodTidy"
    ]
}