{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":dependencyDashboard"
    ],
    "ignorePresets": [
        ":ignoreModulesAndTests"
    ],
    "recreateWhen": "always",
    "prHourlyLimit": 0,
    "prConcurrentLimit": 0,
    "baseBranches": [
        "hs/renovate-v4"
    ],
    "useBaseBranchConfig": "merge",
    "repositories": [
        "stackitcloud/stackit-sdk-go"
    ],
    "enabledManagers": [
        "gomod",
        "github-actions"
    ],
    "gomod": {
        "baseBranches": [
            "hs/renovate-v4"
        ],
        "useBaseBranchConfig": "merge"
    },
    "allowedPostUpgradeCommands": [
        "cd $(git rev-parse --show-toplevel) && make sync-tidy"
    ],
    "postUpgradeTasks": {
        "commands": [
            "cd $(git rev-parse --show-toplevel) && make sync-tidy"
        ],
        "fileFilters": [],
        "executionMode": "update"
    }
}